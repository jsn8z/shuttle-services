{
    "version": "0.2.0",
    "configurations": [
      {
        // Backend Debugging Configuration (Node.js)
        "type": "node",
        "request": "launch",
        "name": "Debug Backend",
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}/shuttle-service-backend/index.js", // Update with your backend entry file
        "env": {
          "NODE_ENV": "development",
          "PORT": "5000" // Example environment variables
        }
      },
      {
        // Frontend Debugging Configuration (React with Chrome)
        "type": "chrome",
        "request": "launch",
        "name": "Debug Frontend (React) in Chrome",
        "url": "http://localhost:3000", // Update if React runs on a different port
        "webRoot": "${workspaceFolder}/frontend/src" // Path to React source files
      },
      {
        // Frontend Debugging Configuration (React with Edge)
        "type": "pwa-msedge",
        "request": "launch",
        "name": "Debug Frontend (React) in Edge",
        "url": "http://localhost:3000", // Update if React runs on a different port
        "webRoot": "${workspaceFolder}/frontend/src" // Path to React source files
      }
    ]
  }
  